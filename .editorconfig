root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

[*.{js,cjson}]
indent_style = space
indent_size = 4

[*.{css,less,scss,ccss}]
indent_style = space
indent_size = 4

[{package.json,*.yml,*.cjson}]
indent_style = space
indent_size = 2

[*.jade]
indent_style = space
indent_size = 2
